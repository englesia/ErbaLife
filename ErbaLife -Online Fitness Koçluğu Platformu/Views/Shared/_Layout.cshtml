<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ErbaLife__Online_Fitness_Koçluğu_Platformu</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ErbaLife__Online_Fitness_Koçluğu_Platformu.styles.css" asp-append-version="true" />
    <style>
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            background-color: #F0F8FF; /* Arka plan rengi AliceBlue */
            color: #343a40; /* Metin rengi için koyu gri */
        }

        .navbar {
            background-color: #007bff; /* Navbar arka plan rengi mavi */
            padding: 0; /* Navbar iç paddingini sıfırla */
        }

        .navbar-brand {
            display: flex;
            align-items: center; /* Logo ve yazıyı dikey olarak ortala */
            padding: 10px 15px; /* Navbar içindeki alanı ayarla */
            font-family: 'Oswald', sans-serif; /* Yazı tipi Oswald */
        }

            .navbar-brand img {
                height: 150px; /* Logo yüksekliğini artır */
                margin-right: 80px; /* Logo ile metin arasındaki boşluk */
            }

        .navbar-collapse {
            display: flex;
            justify-content: flex-start; /* Menü öğelerini sola hizala */
            flex-grow: 1; /* İçeriğin tam genişliği kullanmasını sağlar */
        }

        .navbar-nav {
            display: flex;
            flex-direction: row; /* Menü öğelerini yatay olarak hizala */
            align-items: center; /* Menü öğelerini dikey olarak ortala */
            margin: 0; /* Kenar boşluklarını sıfırla */
            padding: 0; /* İç boşlukları sıfırla */
        }

            .navbar-nav .nav-item {
                margin-right: 30px; /* Menü öğeleri arasını genişlet */
            }

            .navbar-nav .nav-link {
                display: block; /* Butonun tam genişliğini kullan */
                padding: 10px 30px; /* Menü öğeleri arası boşluk */
                font-size: 23px; /* Yazı boyutu */
                font-family: 'Oswald', sans-serif; /* Yazı tipi Oswald */
                font-weight: 300; /* Yazı kalınlığı */
                text-transform: uppercase; /* Yazıyı büyük harf yapar */
                color: white; /* Yazı rengi */
                background-color: #F0F8FF; /* Arka plan rengi AliceBlue */
                border-radius: 5px; /* Köşeleri yuvarla */
                transition: background-color 0.3s, color 0.3s; /* Geçiş animasyonu */
                text-align: center; /* Metni ortala */
            }

                .navbar-nav .nav-link:hover {
                    color: #007bff; /* Hover durumu için mavi renk */
                    background-color: white; /* Hover durumunda arka plan rengi */
                    text-decoration: none; /* Alt çizgi kaldır */
                }

            .navbar-nav .nav-item:last-child .nav-link {
                margin-right: 0; /* Son öğede sağ boşluğu kaldır */
            }

        .footer {
            background-color: #87CEFA; /* Footer arka plan rengi mavi */
            color: white; /* Footer yazı rengi */
            margin-top: auto; /* Footer'ı sayfanın en altına yapıştırır */
            padding: 10px 0; /* Footer içeriği için üst ve alt padding */
            text-align: center; /* Footer içeriğini ortala */
        }

            .footer a {
                color: white; /* Footer link rengi */
            }

                .footer a:hover {
                    color: #0056b3; /* Hover durumu link rengi */
                }

        /* Optional: Style adjustments for content area */
        .container {
            padding-top: 20px;
            padding-bottom: 20px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/Untitled_logo_3_free-file.jpg" alt="ErbaLife Logo" />
                    ErbaLife Online Fitness Koçluğu
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse d-flex justify-content-start" id="navbarSupportedContent">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - ErbaLife Online Fitness Koçluğu - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
